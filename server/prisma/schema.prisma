// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum EducationType {
  EDUCATION
  WORK
  INTERNSHIP
  CERTIFICATE
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  profile  Profile?
  about    About?
  portfolio Portfolio[]
  educations Education[]
  contactMessages ContactMessage[]

  @@map("users")
}

model Profile {
  id          Int      @id @default(autoincrement())
  userId      Int      @unique
  displayName String?
  bio         String?  @db.Text
  avatarUrl   String?
  contactInfo Json?
  theme       Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("profiles")
}

model Portfolio {
  id          Int      @id @default(autoincrement())
  userId      Int
  title       String
  description String?  @db.Text
  imageUrl    String?
  link        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("portfolios")
}

model Education {
  id           Int           @id @default(autoincrement())
  userId       Int
  type         EducationType  @default(EDUCATION)
  institution  String        // ชื่อสถาบัน/บริษัท
  degree       String        // วุฒิ/ตำแหน่ง
  field        String?       // สาขาวิชา
  startDate    DateTime?     // วันที่เริ่มต้น (optional เพื่อรองรับข้อมูลเก่า)
  endDate      DateTime?     // วันที่สิ้นสุด (nullable สำหรับ "ปัจจุบัน")
  order        Int           @default(0) // สำหรับการจัดเรียงลำดับ
  period       String?       // ระยะเวลา (deprecated - เก็บไว้เพื่อความเข้ากันได้ย้อนหลัง)
  location     String?       // สถานที่
  description  String?       @db.Text // รายละเอียด
  gpa          String?       // GPA (สำหรับ education)
  skills       String?       @db.Text // Skills (สำหรับ internship, คั่นด้วย comma)
  imageUrl     String?       // URL สำหรับรูปภาพ (certificate, logo, etc.)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("educations")
}

model About {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  content   String?  @db.Text
  blocks    Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("abouts")
}

model ContactMessage {
  id          Int      @id @default(autoincrement())
  userId      Int
  senderName  String
  senderEmail String
  message     String   @db.Text
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("contact_messages")
}
